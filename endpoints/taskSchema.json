{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "id",
    "type",
    "state",
    "taskId"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "default": "",
      "examples": [
        "Task1"
      ],
      "pattern": "^(.*)$"
    },
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "title": "The Type Schema",
      "default": "",
      "examples": [
        "Task"
      ],
      "pattern": "^(.*)$"
    },
    "state": {
      "$id": "#/properties/state",
      "type": "object",
      "title": "The State Schema",
      "required": [
        "type",
        "value",
        "metadata"
      ],
      "properties": {
        "type": {
          "$id": "#/properties/state/properties/type",
          "type": "string",
          "title": "The Type Schema",
          "default": "",
          "examples": [
            "Number"
          ],
          "pattern": "^(.*)$"
        },
        "value": {
          "$id": "#/properties/state/properties/value",
          "type": "integer",
          "title": "The Value Schema",
          "default": 0,
          "examples": [
            0
          ]
        },
        "metadata": {
          "$id": "#/properties/state/properties/metadata",
          "type": "object",
          "title": "The Metadata Schema"
        }
      }
    },
    "taskId": {
      "$id": "#/properties/taskId",
      "type": "object",
      "title": "The Taskid Schema",
      "required": [
        "type",
        "value",
        "metadata"
      ],
      "properties": {
        "type": {
          "$id": "#/properties/taskId/properties/type",
          "type": "string",
          "title": "The Type Schema",
          "default": "",
          "examples": [
            "Number"
          ],
          "pattern": "^(.*)$"
        },
        "value": {
          "$id": "#/properties/taskId/properties/value",
          "type": "integer",
          "title": "The Value Schema",
          "default": 0,
          "examples": [
            1
          ]
        },
        "metadata": {
          "$id": "#/properties/taskId/properties/metadata",
          "type": "object",
          "title": "The Metadata Schema"
        }
      }
    }
  }
}